---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Informes">
  <main class="h-full w-full flex items-center justify-center bg-slate-50">
    <div class="bg-white p-8 rounded-lg shadow-md max-w-3xl w-full">
      <header class="flex justify-center py-4">
        <h1 class="text-3xl font-bold text-gray-800">Informes</h1>
      </header>
      <div class="bg-gray-100 px-8 py-6 rounded-lg shadow-md">
        <section class="w-full">
          <div class="flex flex-wrap gap-6 justify-center">
            <div class="flex flex-col items-center">
              <label for="client-report" class="block mb-2 text-sm font-medium text-gray-700">Clientes</label>
              <a
                href="/reports/customers"
                class="inline-flex items-center px-5 py-2.5 text-sm font-medium text-white bg-teal-600 rounded-lg focus:ring-4 focus:ring-teal-300 hover:bg-teal-700"
              >
                Generar Informe de Clientes
              </a>
            </div>

            <div class="flex flex-col items-center">
              <label for="product-report" class="block mb-2 text-sm font-medium text-gray-700">Productos</label>
              <a
                href="/reports/products"
                class="inline-flex items-center px-5 py-2.5 text-sm font-medium text-white bg-teal-600 rounded-lg focus:ring-4 focus:ring-teal-300 hover:bg-teal-700"
              >
                Generar Informe de Productos
              </a>
            </div>

            <div class="flex flex-col items-center">
              <label for="supplier-report" class="block mb-2 text-sm font-medium text-gray-700">Proveedores</label>
              <a
                href="/reports/suppliers"
                class="inline-flex items-center px-5 py-2.5 text-sm font-medium text-white bg-teal-600 rounded-lg focus:ring-4 focus:ring-teal-300 hover:bg-teal-700"
              >
                Generar Informe de Proveedores
              </a>
            </div>

            <div class="flex flex-col items-center">
              <label for="sales-report" class="block mb-2 text-sm font-medium text-gray-700">Ventas</label>
              <a
                href="/reports/sales"
                class="inline-flex items-center px-5 py-2.5 text-sm font-medium text-white bg-teal-600 rounded-lg focus:ring-4 focus:ring-teal-300 hover:bg-teal-700"
              >
                Generar Informe de Ventas
              </a>
            </div>
          </div>
        </section>
      </div>
    </div>
  </main>
</Layout>

<style>
  main {
    font-size: 16px;
    color: #333;
  }
</style>
