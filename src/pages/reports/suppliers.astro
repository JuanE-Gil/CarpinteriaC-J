---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Informe de Proveedores">
  <main class="h-full w-full flex items-center justify-center bg-slate-50">
    <div class="bg-white p-8 rounded-lg shadow-md max-w-4xl w-full">
      <header class="py-4">
        <h1 class="text-3xl font-bold text-gray-800">Informe de Proveedores</h1>
      </header>
      <section class="bg-gray-100 p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-semibold mb-4 text-gray-900">Detalles del Informe</h2>
        <p class="text-gray-700">Aquí se mostrarán los detalles del informe de proveedores.</p>
      </section>
    </div>
  </main>
</Layout>

<style>
  main {
    font-size: 16px;
    color: #333;
  }
</style>
