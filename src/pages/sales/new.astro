---
import SalesForm from '@/src/components/sales/SalesForm';
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Nuevo Producto">
  <main class="bg-slate-50 h-full w-full shadow-md rounded-md">
    <div class="flex flex-col h-full w-full p-4 space-y-4">
      <header class="flex justify-start py-8 px-4">
        <h1 class="text-4xl font-bold text-gray-800">Nueva Venta</h1>
      </header>
      <div class="bg-white px-8 py-6 h-full items-center flex">
        <section class="bg-white dark:bg-gray-900 p-8 rounded-lg shadow-md w-full max-w-4xl mx-auto">
          <div class="py-8 px-4 mx-auto max-w-2xl lg:py-16">
            <SalesForm client:visible />
          </div>
        </section>
      </div>
    </div>
  </main>
</Layout>

<style>
  main {
    font-size: 16px;
    color: #333;
  }
</style>
